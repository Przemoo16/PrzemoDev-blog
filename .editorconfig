# https://editorconfig.org/
root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.{js,ts,tsx}]
indent_size = 2

[*.py]
max_line_length = 88

[*.json]
indent_size = 2
insert_final_newline = false

[*.{yml,yaml,md,mdx}]
indent_size = 2

[{Makefile,makefile,**.mk}]
indent_style = tab

[*.diff]
trim_trailing_whitespace = false
